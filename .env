# Environment Variables Template for SmartTestTask
# Copy this file to .env and fill in your values

# Database Connection
ConnectionStrings__DefaultConnection=Server=(localdb)\mssqllocaldb;Database=SmartTestTaskDb;Trusted_Connection=True;MultipleActiveResultSets=true

# For Azure SQL Database use:
# ConnectionStrings__DefaultConnection=Server=tcp:YOUR_SERVER.database.windows.net,1433;Initial Catalog=SmartTestTaskDb;Persist Security Info=False;User ID=YOUR_USER;Password=YOUR_PASSWORD;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# API Authentication
ApiKey=YOUR_SECURE_API_KEY_HERE_MINIMUM_32_CHARS

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Azure Service Bus 
ServiceBus__Enabled=false
ServiceBus__ConnectionString=Endpoint=sb://YOUR_NAMESPACE.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_KEY
ServiceBus__QueueName=contract-processing-queue

# Application Insights (Optional for Azure)
ApplicationInsights__InstrumentationKey=YOUR_INSTRUMENTATION_KEY

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information

# Serilog (Optional)
Serilog__MinimumLevel=Information
Serilog__WriteTo__0__Name=Console
Serilog__WriteTo__1__Name=File
Serilog__WriteTo__1__Args__path=logs/smarttesttask-.txt
Serilog__WriteTo__1__Args__rollingInterval=Day

# CORS Settings
Cors__AllowedOrigins__0=https://localhost:3000
Cors__AllowedOrigins__1=https://localhost:5001
Cors__AllowedOrigins__2=https://YOUR_FRONTEND_URL.azurewebsites.net

# Azure App Service Settings (for production)
WEBSITE_TIME_ZONE=W. Europe Standard Time
WEBSITE_NODE_DEFAULT_VERSION=14.16.0

# Docker Settings (when running in container)
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=your-username/smarttesttask

# Health Check Settings
HealthChecks__Database__Enabled=true
HealthChecks__Database__Tags__0=ready

# Rate Limiting (Optional)
RateLimiting__PermitLimit=100
RateLimiting__Window=00:01:00
RateLimiting__QueueLimit=50

# Swagger (for Development only)
SwaggerUI__Enabled=true
SwaggerUI__RoutePrefix=

# Azure Key Vault (Optional for secrets management)
KeyVault__VaultUri=https://YOUR_KEYVAULT.vault.azure.net/
KeyVault__ClientId=YOUR_CLIENT_ID
KeyVault__ClientSecret=YOUR_CLIENT_SECRET
KeyVault__TenantId=YOUR_TENANT_ID
